<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="150.0" prefWidth="600.0" style="-fx-background-color: #494747;"
            xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.comicteam.controllers.SavingWarningController">
    <children>
        <Label fx:id="questionLabel" layoutX="117.0" layoutY="43.0" text="Voulez-vous enregistrer le document ouvert ?"
               textFill="#d7d7d7" AnchorPane.topAnchor="40.0">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <AnchorPane layoutX="100.0" layoutY="80.0" style="-fx-background-color: darkgrey;" AnchorPane.leftAnchor="100.0"
                    AnchorPane.topAnchor="80.0">
            <children>
                <Button fx:id="yesButton" mnemonicParsing="false" onAction="#yesButtonClick" prefHeight="40.0"
                        prefWidth="100.0" style="-fx-background-color: darkgrey;" text="Oui"/>
            </children>
        </AnchorPane>
        <Button fx:id="noButton" layoutX="250.0" layoutY="80.0" mnemonicParsing="false" onAction="#noButtonClick"
                prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: darkgrey;" text="Non"
                AnchorPane.topAnchor="80.0"/>
        <Button fx:id="cancelButton" layoutX="359.0" layoutY="87.0" mnemonicParsing="false"
                onAction="#cancelButtonClick" prefHeight="40.0" prefWidth="100.0"
                style="-fx-background-color: darkgrey;" text="Annuler" AnchorPane.rightAnchor="100.0"
                AnchorPane.topAnchor="80.0"/>
    </children>
</AnchorPane>
